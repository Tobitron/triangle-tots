<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">Triangle Tots</h1>
    <p class="text-lg text-gray-600">Activities for 3-year-olds in the Triangle area</p>
    <p class="text-sm text-gray-500 mt-1"><%= @activities.count %> activities available</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @activities.each do |activity| %>
      <%= link_to activity_path(activity), class: "block bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 overflow-hidden" do %>
        <div class="p-6">
          <div class="flex items-start justify-between mb-3">
            <h2 class="text-xl font-semibold text-gray-900 flex-1"><%= activity.name %></h2>
            <% if activity.cost_level == 0 %>
              <span class="ml-2 px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded">FREE</span>
            <% else %>
              <span class="ml-2 px-2 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded"><%= "$" * activity.cost_level %></span>
            <% end %>
          </div>

          <div class="flex gap-2 mb-3">
            <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs font-medium rounded capitalize">
              <%= activity.activity_type.tr('_', ' ') %>
            </span>
            <% if activity.indoor? %>
              <span class="px-2 py-1 bg-purple-100 text-purple-700 text-xs font-medium rounded">Indoor</span>
            <% else %>
              <span class="px-2 py-1 bg-yellow-100 text-yellow-700 text-xs font-medium rounded">Outdoor</span>
            <% end %>
          </div>

          <p class="text-gray-600 text-sm line-clamp-2 mb-4"><%= activity.description %></p>

          <div class="text-sm text-gray-500">
            <svg class="inline-block w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <%= activity.address&.split(',')&.first || 'Chapel Hill/Durham' %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
