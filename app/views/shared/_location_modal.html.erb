<div id="locationModal" class="hidden fixed inset-0 z-50" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <!-- Background overlay - clickable to dismiss -->
  <div id="modalBackdrop" class="fixed inset-0 bg-gray-900 bg-opacity-75 backdrop-blur-sm z-40"></div>

  <!-- Modal container - centered -->
  <div class="fixed inset-0 z-50 overflow-y-auto pointer-events-none">
    <div class="flex min-h-full items-center justify-center p-4">
      <!-- Modal panel -->
      <div class="relative bg-white rounded-2xl px-8 py-8 shadow-2xl max-w-md w-full pointer-events-auto">
        <div class="text-center">
          <!-- Icon -->
          <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-blue-100 mb-4">
            <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>

          <h3 class="text-2xl font-bold text-gray-900 mb-2" id="modal-title">
            Where are you located?
          </h3>
          <p class="text-base text-gray-600 mb-6">
            We'll show you activities closest to home
          </p>

          <!-- Error message (initially hidden) -->
          <div id="locationError" class="hidden mb-4 p-4 bg-red-50 rounded-lg">
            <p class="text-sm text-red-800"></p>
          </div>

          <!-- Location button -->
          <button
            type="button"
            id="useLocationBtn"
            class="w-full inline-flex justify-center items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors mb-4"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Use My Location
          </button>

          <!-- Skip link -->
          <button
            type="button"
            id="skipLocationBtn"
            class="text-sm text-gray-500 hover:text-gray-700 underline"
          >
            Skip for now
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
